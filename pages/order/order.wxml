<!-- 第一部分 图片展示-->
<image src="{{httpImageUrl+busInfo.project.image.imageurl}}"></image>
<!-- 第二部分 显示信息-->
<view class="busInfo">
  <view class="mt20">  商家名称：<text class="orange">{{busInfo.busname}}</text> </view>
  <view class="mt20">  项目名称：<text class="orange">{{busInfo.project.proname}}</text> </view>
  <view class="mt20">  服务时间：<text class="orange">{{busInfo.servertime}}</text> </view>
</view>
<!-- 第三部分 设置日期和时间 
picker标签：表单组件
属性：mode="date"声明为日期选择器
	 value="{{date}}" 显示选择日期
	start="" 开始时间
	end="" 结束时间
   bindchange="bindDateChange" 当日期发生改变时触发bindDateChange函数
-->
<view class="dataAndTime"> 
    <!-- 日期 -->
    <view class="section">
      <image class="iconImage" src="/img/date.png"></image>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2099-09-01" bindchange="bindDateChange">
        <view class="picker">
          {{date}}
        </view>
      </picker>
    </view>
    <!-- 时间
	mode="time" 声明为时间选择器
	
	-->
    <view class="section">
     <image src="/img/time.png" class="iconImage"></image>
      <picker mode="time" value="{{time}}" start="09:01" end="24:00" bindchange="bindTimeChange">
        <view class="picker">
           {{time}}
        </view>
      </picker>
    </view>

</view>
<!-- 第四部分 表单 -->
<view class="orderForm">
  <form catchsubmit="formSubmit">
    <view class="formItem"> 
        <view class="orderFont">预约宾客姓名：</view>
        <input placeholder="请输入宾客姓名" type="text" name="username"></input>
    </view>

    <view class="formItem"> 
        <view class="orderFont">联系电话：</view>
        <input placeholder="请输入联系电话" type="number" name="usertell"></input>
    </view>

    <view class="formItem"> 
        <view class="orderFont">留言信息：</view>
        <input placeholder="请输入留言信息" type="text" name="information"></input>
    </view>

    <button  formType="submit" style="width:80%" class="orderBtn">确认预定</button>
  </form>

</view>